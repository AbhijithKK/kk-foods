<section style="margin-top: 4rem;">
  <div class="container">
    <div class="row">
      <form class="form-inline my-2 my-lg-0">
        <div class="d-flex">
          <input class="form-control mr-sm-2" type="text" placeholder="Search user">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </div>
      </form>


    </div>

    <table class="table" style="margin-top: 20px;">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">MobNumber</th>
          <th scope="col">Email</th>

          <th scope="col">status</th>
          <th scope="col">action </th>
        </tr>
      </thead>
      <tbody>
        {{#each result}}
        <tr>

          <td>{{inc @index}}</td>
          <td>{{this.name1}}</td>
          <td>{{this.mob}}</td>
          <td>{{this.email}}</td>

          <td>{{this.block}}</td>
          <td>
            <a href="/admin/block/{{this._id}}" class="btn btn-danger btn-block mb-4"
              onclick="return confirm('Are you sure ?')">block</a>
            <a href="/admin/unblock/{{this._id}}" class="btn btn-success btn-block mb-4"
              onclick="return confirm('Are you sure ?')">unBlock</a>
          </td>
        </tr>
        {{/each}}

      </tbody>
    </table>

