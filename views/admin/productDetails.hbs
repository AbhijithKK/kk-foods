<section style="margin-top: 4rem;">
  <div class="container">
    <div class="row">
      <form class="form-inline my-2 my-lg-0">
        <div class="d-flex">
          <input class="form-control mr-sm-2" type="text" placeholder="Search product">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </div>
      </form>
      <div style="margin-top: 15px;">
        <a href="/admin/addProduct" class="btn btn-primary my-2 my-sm-0">Add product</a>

      </div>

    </div>

    <table class="table" style="margin-top: 20px;">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">image</th>
          <th scope="col">product name</th>
          <th scope="col">catogary</th>
          <th scope="col">description</th>
          <th scope="col">price</th>
          <th scope="col">flag status</th>
          <th scope="col">action</th>
        </tr>
      </thead>
      <tbody>
        {{#each product}}

        <tr>

          <td>{{inc @index}}</td>
          {{!-- {{/with}} --}}
          <td><img src="/images/{{this.image1.[0].filename}}" alt="" style="width: 40px;height: 50px;"></td>
          <td>{{this.productName}}</td>
          <td>{{this.productCatogary}}</td>
          <td>{{this.productDiscription}}</td>
          <td>{{this.productPrize}}</td>
          <td>{{this.del}}</td>
          <td>
            <a href="/admin/editproduct/{{this._id}}" class="btn btn-primary btn-block mb-4">edit</a>
            <a href="/admin/productDelete?id={{this._id}}&delet={{this.del}}" class="btn btn-danger btn-block mb-4"
              onclick="return confirm('Are you sure ?')">{{this.del}}</a>
          </td>
        </tr>

        {{/each}}

      </tbody>
    </table>

  </div>
</section>

<script>
  hbs.registerHelper("inc", function (value, options) {
    return parseInt(value) + 1;
  });
</script>