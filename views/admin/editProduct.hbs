        <img src="/images/{{data.image2.[0].filename}}" alt="(IMG-1 EMPTY)" style="height: 50px;width: 7rem;" id="showIMG">
        <button onclick="imageChange('{{data._id}}','0')" type="button" class="btn "
          data-bs-dismiss="modal">Delete</button>
        <form name="imageForm2" enctype="multipart/form-data" onsubmit="return imagesAdd('{{data._id}}','0')">
          <input type="file" onchange="imgShow(event,'1')" value="" class="form-control" id="validationDefault05" name="image2" style="width: 16rem;"
            placeholder="image">
          <button type="submit" style="width: 53rem;" class="btn"> <a>Save</a></button>
        </form>

      </div>

    </div>
  </div>
</div>

