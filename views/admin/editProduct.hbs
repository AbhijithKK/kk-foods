<div class="container">
    <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: 84px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
        <div class="card-body py-5 px-md-5">

            <div class="row d-flex justify-content-center" style="padding-left: 25%;">
                <div class="col-lg-8">
                    <h2 class="fw-bold mb-5">Edit products</h2>

                    <form action="/admin/editProduct/{{data._id}}" method="post" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label for="validationDefault01">product Name</label>
                                <input type="text" class="form-control" id="validationDefault01" name="productName"
                                    style="width: 160%;" value="{{data.productName}}" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationDefault02">catogery</label>

                                 <div class="dropdown">
                   <select class="btn btn-white dropdown-toggle"  name="productCatogary" id="" style="
                                width: 290px; border-color: black;">
                    <option class="dropdown-menu dropdown-menu-white" value="{{data.productCatogary}}"  style="width: 160%;">{{data.productCatogary}}</option>
                    {{#each datas}}
                    <option value="{{this.catogary}}">{{this.catogary}}</option>
                     {{/each}}
                   </select>
                   </div>

                                {{!-- <input type="text" class="form-control" id="validationDefault02" name="productCatogary" --}}
                                    {{!-- style="width: 160%;" value="{{data.productCatogary}}" required> --}}
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationDefault02">discription</label>

                                <textarea class="form-control" aria-valuetext="" name="productDiscription"
                                    aria-label="With textarea"
                                    style="width: 160%;">{{data.productDiscription}}</textarea>
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="validationDefault03">â‚¹ price</label>
                                <input type="number" class="form-control" id="validationDefault03" name="productPrize"
                                    style="width: 107%;" value="{{data.productPrize}}" required>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label for="validationDefault05">upload image 1 </label>
                                <img src="/images/{{data.image1.[0].filename}}" alt="" style="height: 50px;width: 40px;"
                                    id="viewimage">
                                <input type="file" class="form-control" id="validationDefault05" name="image1"
                                    style="width: 216%;" placeholder="image" onchange="viewimg(event)" required>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="validationDefault05">upload image 2</label>
                                <img src="/images/{{data.image2.[0].filename}}" alt="" style="height: 50px;width: 40px;">
                                <input type="file" class="form-control" id="validationDefault05" name="image2"
                                    style="width: 216%;" placeholder="image" multiple required>
                            </div>
                        </div>

                        <button class="btn btn-primary" type="submit">Submit form</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<script>
    function viewimg(event) {
        console.log(URL.createObjectURL(event));
        document.getElementById('viewimage').src = URL.createObjectURL(event.target.files[0])
    }
</script>