<div class="container">
  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: 84px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center" style="padding-left: 25%;">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5">Edit products</h2>

          <form action="/admin/editProduct/{{data._id}}" method="post" enctype="multipart/form-data" name="editForm"
            onsubmit="return validCheck()">
            <div class="form-row">
              <div class="col-md-4 mb-3">
                <label id="proName0" for="validationDefault01">product Name <span style="color: #ff3300;">*</span></label>
                <label id="proName" style="color: #ff3300;" for="validationDefault01"></label>
                <input type="text" class="form-control" id="validationDefault01" name="productName"
                  style="width: 16rem;" value="{{data.productName}}" required>
              </div>
              <div class="col-md-4 mb-3">
                <label for="validationDefault02">catogery <span style="color: #ff3300;">*</span></label>

                <div class="dropdown">
                  <select class="btn btn-white dropdown-toggle" name="productCatogary" id="" style="
                                width: 15.5rem; border-color: black;">
                    <option class="dropdown-menu dropdown-menu-white" value="{{data.productCatogary}}"
                      style="width: 160%;">{{data.productCatogary}}</option>
                    {{#each datas}}
                    <option value="{{this.catogary}}">{{this.catogary}}</option>
                    {{/each}}
                  </select>
                </div>

                {{!-- <input type="text" class="form-control" id="validationDefault02" name="productCatogary" --}} {{!--
                  style="width: 160%;" value="{{data.productCatogary}}" required> --}}
              </div>
              <div class="col-md-4 mb-3">
                <label for="validationDefault02">discription</label>

                <textarea class="form-control" aria-valuetext="" name="productDiscription" aria-label="With textarea"
                  style="width: 16rem;">{{data.productDiscription}}</textarea>
              </div>

            </div>
            <div class="form-row">
              <div class="col-md-6 mb-3">
                <label for="validationDefault03">â‚¹ price <span style="color: #ff3300;">*</span></label>
                <input type="number" class="form-control" id="validationDefault03" name="productPrize"
                  style="width: 16rem;" value="{{data.productPrize}}" required min="0">
              </div>

              <div class="col-md-3 mb-3">
                <label for="validationDefault05">Main Image <span style="color: #ff3300;">*</span></label>
                
                <img src="/images/{{data.image1.[0].filename}}" alt="" style="height: 50px;width: 40px;" id="viewimage">
                <input type="file" onchange="viewImage(event)" class="form-control" id="validationDefault05" name="image1" style="width: 16rem;"
                  placeholder="image" >
              </div>
              <div class="col-md-3 mb-3">
                <label for="validationDefault05">Sub Images(max-3)</label>
                <div class="row">
                  <a type="button" data-bs-target="#staticBackdrop" data-bs-toggle="modal"
                    style="height: 50px;width: 50%;"><img src="/images/{{data.image2.[0].filename}}" alt="IMG1"
                      style="height: 50px;width: 100%;"></a>
                  <a type="button" data-bs-target="#staticBackdrop1" data-bs-toggle="modal"
                    style="height: 50px;width: 50%;"> <img src="/images/{{data.image2.[1].filename}}" alt="IMG2"
                      style="height: 50px;width: 100%; "></a>
                  <a type="button" data-bs-target="#staticBackdrop2" data-bs-toggle="modal"
                    style="height: 100px;width: 100%;"><img src="/images/{{data.image2.[2].filename}}" alt="IMAGE 3"
                      style="height: 100px;width: 100%;"></a>
                </div>

              </div>
            </div>

            <button class="btn btn-primary" type="submit">Submit form</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>

