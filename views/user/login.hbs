  <!-- Sing in  Form -->
        <section class="sign-in">
            <div class="container" style="margin-top: 170px;">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="/stylesheets/logintemp/images/about-img.png" alt="sing up image"></figure>
                        <a href="/signup" class="signup-image-link">Create an account</a>
                    </div>

                    <div class="signin-form">
                        <h2 class="form-title">Log In</h2>
                        <h4 style="color: red;">{{msg}}</h4>
                        <form method="POST" class="register-form" id="login-form" action="/home" name="form" onsubmit="return valid()">
                            <div class="form-group">
                               <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="email" placeholder="Your Email" required/>
                            </div>
                            <div class="form-group">
                                <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="password" id="your_pass" placeholder="Password"/>
                                <p id="passw" style="color: red;"></p>
                            </div>
                            <div class="form-group">
                                {{!-- <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" /> --}}
                                <label for="remember-me" class="label-agree-term"><span><span></span></span><a href="">forgot password</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit"  id="signin" class="form-submit" value="Log in"/>
                            </div>
                        </form>
                       
                    </div>
                </div>
            </div>
        </section>

        <script>
            var pass=document.form.password;
                function valid(){
                    if(pass.value.length<5){
                        document.getElementById('passw').innerHTML="password must 6 letters or above"
                        return false;
                    }
                     document.getElementById('passw').innerHTML=""
                }
        </script>