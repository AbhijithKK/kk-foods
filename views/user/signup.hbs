<!-- Sign up form -->
<section class="signup">
  <div class="container" style="margin-top: 170px;">
    <div class="signup-content">
      <div class="signup-form">
        <h2 class="form-title">Sign up</h2>

        <form method="POST" class="register-form" action="/" id="register-form" name="form" onsubmit="return valid()">
          <div class="form-group">
            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
            <input type="text" name="name1" id="name" placeholder="Your Name" required />
            <p id="namep" style="color: red;"></p>
          </div>
          <div class="form-group">
            <label for="email"><i class="zmdi zmdi-email"></i></label>
            <input type="email" onblur="mailchecker()" name="email" id="emailVerify" placeholder="Your Email"
              required />
            <p id="emailMsg" style="color: red;"></p>
          </div>
          <div class="form-group">
            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
            <input type="password" name="password" id="pass" placeholder="Password" />
            <p id="pass1" style="color: red;"></p>
          </div>
          <div class="form-group">
            <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
            <input type="password" name="re_password" id="re_pass" placeholder="Repeat your password" />
            <p id="pass2" style="color: red;"></p>
          </div>

          <div class="form-group form-button">
            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
          </div>
        </form>
      </div>
      <div class="signup-image">
        <figure><img src="/stylesheets/logintemp/images/b3.png" alt="sing up image"></figure>
        <a href="/login" class="signup-image-link">I am already member</a>
      </div>
    </div>
  </div>
</section>

