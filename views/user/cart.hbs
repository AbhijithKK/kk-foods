    <section class="pt-5 pb-5">
      <div class="container">
        <div class="row w-100">
          <div class="col-lg-12 col-md-12 col-12">
            <h3 class="display-5 mb-2">Shopping Cart</h3>
            <p class="mb-5">
              <i class="text-info font-weight-bold">{{totalcartCount}}</i> items in your cart
            </p>
            <table id="shoppingCart" class="table table-condensed table-responsive">
              <thead>
                <tr>
                  <th style="width:30%">image</th>
                  <th style="width:30%">name</th>
                  <th style="width:12%">Price</th>
                  <th style="width:10%">Quantity</th>
                  <th style="width:10%">Total</th>
                  <th style="width:16%"></th>
                </tr>
              </thead>
              <tbody>
                {{#each product}}
                <tr>
                  <td data-th="Product">
                    <div class="row">
                      <div class="col-md-6 col-12 ">
                        <img src="/images/{{this.image1.[0].filename}}" alt="" class="img-fluid "
                          style="height: 50px;width: 45px;">
                      </div>

                    </div>
                  </td>
                  <td>
                    <h5>{{this.productName}}</h5>
                  </td>
                  <td data-th="Price">{{this.productPrize}}</td>
                  <td data-th="Quantity">
                    <button id="minusbtn" class="btn"
                      onclick="counter('{{this._id}}','-1','{{@index}}','{{this.ofId}}')">-</button>

                    <span id="{{@index}}">{{{this.count}}}</span>
                    <button class="btn" onclick="counter('{{this._id}}','1','{{@index}}','{{this.ofId}}')">+</button>
                    {{!-- <input type="number" id="" min="1" max="10"
                      class="cartQuantityss form-control form-control-lg text-center" value="1"> --}}
                  </td>
                  <td data-th="Price" id="{{@index}}pro">{{this.proTotal}}</td>
                  <td class="actions" data-th="">
                    <div class="text-right">

                      <a href="/deleteCartitem?id={{this._id}}&&ofId={{this.ofId}}"
                        style="text-decoration: none;"><button onclick="return confirm('Are you sure ?')"
                          class="btn btn-white border-secondary bg-white btn-md mb-2">
                          <i class="fa fa-remove"></i>
                        </button></a>
                    </div>
                  </td>
                </tr>
                {{/each}}

              </tbody>
            </table>
            <div class="float-right text-right">
              <h4>Subtotal:</h4>
              <h1 id="newtotal">{{total}}</h1>
            </div>
          </div>
        </div>
        <div class="row mt-4 d-flex align-items-center">
          <div class="col-sm-6 order-md-2 text-right">
